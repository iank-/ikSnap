/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand');
@import url('http://fonts.googleapis.com/css?family=Bubbler+One');
@import url('http://fonts.googleapis.com/css?family=Oxygen:400,300,700');

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #222222
background-color = #fafafa

body
	font-family 'Oxygen'
	font-weight 400
	background-color background-color
	color #444

header
	font-family 'Bubbler One'
	padding 10px 40px
	color #fff
	font-size 25px
	text-align left

	/*
	* Note the use of the `main-color`
	* variable and the `darken` function
	*/
	background-color main-color
	border-bottom 1px solid darken(main-color, 30%)
	text-shadow 0px -1px 0px darken(main-color, 30%)


.container
	width 500px
	margin 50px auto
	overflow hidden
  
.userInfo
	font-family 'Oxygen'
	font-weight 200
	width 300px
	font-size 12px
	float right
	text-align left

.main-content
	float left
	width 500px
	p
		margin-bottom 20px


	h1
		font-size 20px
		font-family 'Bubbler One'
		margin-bottom 20px
		
input
	margin-bottom 10px

p
	line-height 1.8

footer
	position absolute
	width 100%
	bottom 0px
	font-family 'Bubbler One'
	padding 10px 10px
	color #fff
	font-size 10px
	text-align center
	background-color main-color
	border-top 1px solid darken(main-color, 30%)

