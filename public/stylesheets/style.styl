/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand');
@import url('http://fonts.googleapis.com/css?family=Bubbler+One');
@import url('http://fonts.googleapis.com/css?family=Roboto:400,100');

/*
 * Nib provides a CSS reset
 */
global-reset()



.container
	display block
	position absolute
	height auto
	bottom 0
	top 0
	left 0
	right 0
	background-color black

.columnwrap
	position relative

.nav
	background-color #111111
	width 150px
	position fixed
	left 0
	top 0 
	bottom 0
	height auto
	display: -webkit-flex;
	display: flex;

.content
	margin-left 150px
	padding 0px
	overflow auto
	
	
.header
	font-size 40px
	color #FFF
	text-shadow:0px 0px 5px white;
	font-family 'Bubbler One'
	font-weight 300
	text-align left
	width 100%
	padding-top 20px
	padding-bottom 10px
	margin-right 50px
	
	
.logo 
	font-size 52px
	color #EEE
	font-family 'Bubbler One'
	font-weight 400
	text-align center
	letter-spacing -0.5px
	padding 10px
	height 48px
	margin auto
	
form
	position absolute
	bottom 50px
	line-height 1.2

input
	background-color #111111
	color #FFF

img
	top 0
	width 400px
	margin 0
	height auto
	
.small
	color #EEE
	letter-spacing -0.5px
	font-family 'Roboto'
	font-weight 100
	font-size 12px


.smallname
	color #EEE
	margin-top 5px
	margin-bottom 15px
	padding 0
	letter-spacing -0.5px
	font-family 'Roboto'
	font-weight 100
	font-size 12px
	line-height 1.8


.pictureBlock
	top 0
	position relative
	display inline-flex
	width 400px
	margin 10px
	vertical-align bottom
	
	
.caption
	position absolute
	bottom 5px
	left 0px
	padding 5px
	text-align left
	vertical-align bottom
	color #EEE
	letter-spacing -0.5px
	background-color black
	opacity 0.7
	font-family 'Roboto'
	font-weight 400

a
	text-decoration none
	color #FFF

body
	color #EEE
	letter-spacing -0.5px
	background-color black
	font-family 'Roboto'
	font-weight 100
	line-height 1.8